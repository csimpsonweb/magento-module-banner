<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Maximuspoder\Banner\Block\Banner" template="Maximuspoder_Banner::banner.phtml" name="bannerslider.cms.page.content.top" before="-">
                <action method="setPosition">
                    <argument name="position" xsi:type="string">cms-page-content-top</argument>
                </action>
                <action method="setBannerId">
                    <argument name="banner_id" xsi:type="string">2</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>